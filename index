<script>
  // PAWS RAIN
  const pawsContainer = document.getElementById('pawsRain');
  const pawEmojis = ['üêæ', 'üê∫', 'üåô', 'üêæ', 'üêæ', 'üêæ'];

  function createPaw() {
    const paw = document.createElement('div');
    paw.className = 'paw';
    paw.textContent = pawEmojis[Math.floor(Math.random() * pawEmojis.length)];
    paw.style.left = Math.random() * 100 + 'vw';
    paw.style.fontSize = (Math.random() * 1.5 + 0.8) + 'rem';
    const duration = Math.random() * 8 + 6;
    paw.style.animationDuration = duration + 's';
    paw.style.animationDelay = Math.random() * 3 + 's';
    pawsContainer.appendChild(paw);
    setTimeout(() => paw.remove(), (duration + 5) * 1000);
  }

  for (let i = 0; i < 15; i++) createPaw();
  setInterval(createPaw, 600);

  // SCROLL ANIMATIONS
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.style.opacity = '1';
        e.target.style.transform = 'translateY(0)';
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.stat-card, .feature-list li, .token-item, .phase-content, .community-card, .news-card, .step-card').forEach(el => {
    el.style.opacity = '0';
    el.style.transform = 'translateY(20px)';
    el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(el);
  });
</script>
</body>
